<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HotelsAppTheme" parent="HotelsAppThemeBase" />

    <style name="HotelsAppTheme.Startup" parent="HotelsAppTheme">
        <item name="android:windowBackground">@drawable/img_background</item>
    </style>

    <style name="HotelsAppTheme.Transparent" parent="HotelsAppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="HotelsAppTheme.TransparentToolbar" parent="HotelsAppThemeBase.TransparentToolbar" />

    <style name="HotelsAppThemeBase" parent="LibHotelsTheme">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowBackground">@color/theme_background</item>
    </style>

    <style name="HotelsAppThemeBase.TransparentToolbar" parent="LibHotelsTheme">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowBackground">@color/theme_background</item>
    </style>

    <style name="LibHotelsTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">?attr/libHotelsBackground</item>
        <item name="android:textViewStyle">@style/HotelsAppTheme.Widget.TextView</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="titleTextAppearance">@style/HotelsAppTheme.TextAppearance.AppBar.Title</item>
        <item name="subtitleTextAppearance">@style/HotelsAppTheme.TextAppearance.AppBar.Subtitle
        </item>
    </style>

    <style name="LibHotelsTheme" parent="LibHotelsTheme.Base" />
</resources>