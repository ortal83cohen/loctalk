<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Fragment" />

    <style name="AppTheme.Fragment.SemiTransparent" />

    <style name="AppTheme.Fragment.SemiTransparent.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#A5000000</item>
    </style>

    <style name="AppTheme.Fragment.SemiTransparent.Content">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:background">#f4f4f4</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <!-- AppTheme.TextAppearance //-->
    <style name="AppTheme.TextAppearance" />

    <style name="AppTheme.TextAppearance.Title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Normal">
        <item name="android:textColor">@color/theme_text_primary</item>
        <item name="android:textSize">@dimen/size_text_secondary</item>
    </style>

    <style name="AppTheme.TextAppearance.BoldBlack">
        <item name="fontPath">@string/font_bold</item>
        <item name="android:textColor">@color/theme_text_primary</item>
        <item name="android:textSize">@dimen/size_text_secondary</item>
    </style>

    <style name="AppTheme.TextAppearance.Bold">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="AppTheme.TextAppearance.Normal.Bold" parent="AppTheme.TextAppearance.Normal">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="AppTheme.TextAppearance.Small">
        <item name="android:textColor">@color/theme_text_primary</item>
        <item name="android:textSize">@dimen/size_text_small</item>
    </style>

    <style name="AppTheme.TextAppearance.Review.Name" parent="AppTheme.TextAppearance.Normal">
        <item name="fontPath">@string/font_medium</item>
        <item name="android:textColor">#3f4745</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Review.Purpose" parent="AppTheme.TextAppearance.Normal">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Review.Date" parent="AppTheme.TextAppearance.Normal">
        <item name="fontPath">@string/font_medium</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Review.Score" parent="AppTheme.TextAppearance.Normal">
        <item name="fontPath">@string/font_bold</item>
        <item name="android:textColor">#3f4745</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Review.Title" parent="AppTheme.TextAppearance.Normal">
        <item name="fontPath">@string/font_medium</item>
        <item name="android:textColor">#3f4745</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Review.Text" parent="AppTheme.TextAppearance.Normal">
        <item name="android:textColor">#53545b</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Datepicker" />

    <style name="AppTheme.TextAppearance.Datepicker.Small" />

    <style name="AppTheme.TextAppearance.Datepicker.Small.MonthYear">
        <item name="fontPath">@string/font_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Datepicker.Small.Arrow">
        <item name="android:textSize">32sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.TextAppearance.Datepicker.Button" />

    <style name="AppTheme.TextAppearance.Datepicker.Button.Title">
        <item name="android:textSize">@dimen/size_text_small</item>
    </style>

    <style name="AppTheme.TextAppearance.Datepicker.MonthYear" parent="AppTheme.TextAppearance.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.TextAppearance.Datepicker.Selected" />

    <style name="AppTheme.TextAppearance.Datepicker.Selected.Title">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/size_text_primary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.Datepicker.Selected.Day" parent="AppTheme.TextAppearance.Title">
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/size_text_primary</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.TextAppearance.Datepicker.Selected.Month">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/size_text_primary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.TextAppearance.Record" />

    <style name="AppTheme.TextAppearance.RecordList" />

    <style name="AppTheme.TextAppearance.RecordSummary" />

    <style name="AppTheme.TextAppearance.Record.Title">
        <item name="android:lines">1</item>
        <item name="fontPath">@string/font_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextAppearance.RecordList.SubHeader">
        <item name="fontPath">@string/font_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.TextAppearance.Record.DiscountPercentage">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="AppTheme.TextAppearance.PoiCategory">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/size_text_secondary</item>
    </style>

    <style name="AppTheme.TextAppearance.PoiTitle">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/size_text_primary</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.TextAppearance.AboutTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/size_text_primary</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.TextAppearance.SnippetSubText">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/size_text_secondary</item>
        <item name="android:textColor">?attr/libRecordsColorTextSecondary</item>
    </style>

    <style name="AppTheme.TextAppearance.SnippetText">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/size_text_secondary</item>
        <item name="android:textColor">?attr/libRecordsColorTextSecondary</item>
    </style>

    <style name="AppTheme.TextAppearance.SnippetTitle" parent="AppTheme.TextAppearance.PoiTitle" />

    <style name="AppTheme.TextAppearance.RecordSnippet" />

    <style name="AppTheme.TextAppearance.RecordSnippet.Review">
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">#629c2b</item>
    </style>

    <style name="AppTheme.TextAppearance.RecordSnippet.Highlights">
        <item name="android:textSize">16sp</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">#3d3d3d</item>
    </style>

    <style name="AppTheme.TextAppearance.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Record.Price">
        <item name="android:lines">1</item>
        <item name="fontPath">@string/font_bold</item>
        <item name="android:textColor">@color/theme_accent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.RecordSummary.Price">
        <item name="android:lines">1</item>
        <item name="fontPath">@string/font_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.RecordSummary.RecordName">
        <item name="android:lines">1</item>
        <item name="fontPath">@string/font_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextAppearance.RecordSummary.SelectDates">
        <item name="fontPath">@string/font_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.RecordSummary.RoomName">
        <item name="android:maxLines">2</item>
        <item name="fontPath">@string/font_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.TextAppearance.Record.BasePrice">
        <item name="android:lines">1</item>
        <item name="fontPath">@string/font_medium</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.TextAppearance.AppBar" />

    <style name="AppTheme.TextAppearance.AppBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="AppTheme.TextAppearance.AppBar.Subtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Booking" />

    <style name="AppTheme.TextAppearance.Booking.Title">
        <item name="fontPath">@string/font_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#3f4745</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- AppTheme.Widget -->
    <style name="AppTheme.Widget" />

    <style name="AppTheme.Widget.AutocompleteView" parent="AppTheme.Widget.EditText">
        <item name="android:background">@drawable/button_color_white</item>
        <item name="android:ellipsize">start</item>
        <item name="android:focusable">true</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">24dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">20sp</item>
        <item name="fontPath">@string/font_medium</item>
    </style>

    <style name="AppTheme.Widget.Login.EditText" parent="AppTheme.Widget.EditText">
        <item name="android:background">@drawable/button_color_white</item>
        <item name="android:ellipsize">start</item>
        <item name="android:focusable">true</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="fontPath">@string/font_medium</item>
    </style>

    <style name="AppTheme.Widget.Booking.EditText" parent="AppTheme.Widget.EditText">
        <item name="android:textColor">#949494</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Widget.Button.AccentButton">
        <item name="android:background">@drawable/ripple_button_theme_accent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Widget.Button.PaymentChoice" parent="AppTheme.Widget.WhiteButton.NoBorder">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/size_text_primary</item>
    </style>

    <style name="AppTheme.Widget.Button" parent="AppTheme.Widget.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Widget.Button.Accent" parent="AppTheme.Widget.Button">
        <item name="android:background">@drawable/ripple_button_theme_accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Widget.PrimaryButton" parent="AppTheme.Widget.Button">
        <!--<item name="android:textColor">@drawable/</item>-->
        <item name="android:background">@drawable/ripple_button_border_color_primary</item>
    </style>

    <style name="AppTheme.Widget.WhiteButton.NoBorder" parent="AppTheme.Widget.Button">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@drawable/button_color_white</item>
    </style>

    <style name="AppTheme.Widget.EditText" parent="AppTheme.Widget.TextView">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.Widget.Spinner.TextView" parent="AppTheme.Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Widget.RecordSummary.AccentBottomButton" parent="AppTheme.Widget.PrimaryButton">
        <item name="android:background">@drawable/ripple_button_theme_accent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Title</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Widget.FilterPriceText">
        <item name="android:lines">1</item>
        <item name="fontPath">@string/font_medium</item>
        <item name="android:textColor">@color/theme_accent</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="AppTheme.Widget.FilterCheckBox">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_filter_button</item>
        <item name="android:textColor">@color/filter_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AppTheme.Widget.NavDrawer" />

    <style name="AppTheme.Widget.NavDrawer.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_button_color_white</item>
    </style>

    <style name="AppTheme.Widget.NavDrawer.Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="AppTheme.Widget.Login" />

    <style name="AppTheme.Widget.Login.GoogleButton">
        <item name="android:background">#dd4b39</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableLeft">@drawable/btn_g_plus_normal</item>
        <item name="android:drawableRight">@drawable/btn_g_plus_empty</item>
    </style>

    <style name="AppTheme.Widget.Login.FacebookButton">
        <item name="android:background">#3b579d</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableLeft">@drawable/btn_fb_normal</item>
        <item name="android:drawableRight">@drawable/btn_g_plus_empty</item>
    </style>

    <style name="AppTheme.Widget.AccentTextButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/minimum_default_padding</item>
        <item name="android:background">@drawable/ripple_button_color_gray</item>
        <item name="android:padding">@dimen/minimum_default_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/theme_accent</item>
    </style>

    <style name="AppTheme.Widget.NumberBoxView">
        <item name="android:layout_height">136dp</item>
        <item name="android:background">@drawable/button_color_white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>


</resources>